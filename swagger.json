{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "API de Tracking Numbers",
    "description": "Una API para gestionar tracking numbers de env√≠os",
    "contact": {
      "name": "Tu Nombre",
      "email": "tu@email.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/agregar": {
      "post": {
        "summary": "Agregar un nuevo tracking number",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "trackingnumber": {
                    "type": "string"
                  },
                  "deliverydate": {
                    "type": "string",
                    "format": "date"
                  },
                  "shipmentdate": {
                    "type": "string",
                    "format": "date"
                  }
                },
                "required": ["trackingnumber"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "El tracking number se ha agregado correctamente"
          },
          "500": {
            "description": "Error al agregar el tracking number"
          }
        }
      }
    },
    "/actualizar/{trackingnumber}": {
      "put": {
        "summary": "Actualizar el deliverydate de un tracking number",
        "parameters": [
          {
            "name": "trackingnumber",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "deliverydate": {
                    "type": "string",
                    "format": "date"
                  }
                },
                "required": ["deliverydate"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "El deliverydate se ha actualizado correctamente"
          },
          "404": {
            "description": "El tracking number no existe en la base de datos"
          },
          "500": {
            "description": "Error al actualizar el deliverydate"
          }
        }
      }
    },
    "/actualizar/shipmentdate": {
      "put": {
        "summary": "Actualizar el shipmentdate en tracking numbers sin shipmentdate",
        "responses": {
          "200": {
            "description": "El shipmentdate se ha actualizado correctamente"
          },
          "500": {
            "description": "Error al actualizar el shipmentdate"
          }
        }
      }
    },
    "/consultar/{trackingnumber}": {
      "get": {
        "summary": "Consultar el estado de un tracking number",
        "parameters": [
          {
            "name": "trackingnumber",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "El paquete ha sido entregado y embarcado (si aplica)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "deliverydate": {
                      "type": "string",
                      "format": "date"
                    },
                    "shipmentdate": {
                      "type": "string",
                      "format": "date"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "El paquete no ha sido entregado"
          },
          "500": {
            "description": "Error al consultar el tracking number"
          }
        }
      }
    }
  }
}
